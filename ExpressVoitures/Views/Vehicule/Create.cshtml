@model ExpressVoitures.Models.ViewModels.VehiculeViewModel

<h2>Ajouter un véhicule</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Année</label>
        <select asp-for="AnneeId" class="form-control" asp-items="Model.Annees"></select>
    </div>

    <div class="form-group">
        <label>Marque</label>
        <select asp-for="MarqueId" class="form-control" asp-items="Model.Marques"></select>
        <input asp-for="NewMarque" class="form-control" placeholder="Nouvelle marque" />
    </div>

    <div class="form-group">
        <label>Modèle</label>
        <select asp-for="ModeleId" class="form-control" asp-items="Model.Modeles"></select>
        <input asp-for="NewModele" class="form-control" placeholder="Nouveau modèle" />
    </div>

    <div class="form-group">
        <label>Finition</label>
        <select asp-for="FinitionId" class="form-control" asp-items="Model.Finitions"></select>
        <input asp-for="NewFinition" class="form-control" placeholder="Nouvelle finition" />
    </div>

    <div class="form-group">
        <label>Disponible</label>
        <input asp-for="Disponible" type="checkbox" />
    </div>

    <div class="form-group">
        <label>Date d'achat</label>
        <input asp-for="DateAchat" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Prix d'achat</label>
        <input asp-for="PrixAchat" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Réparation</label>
        <input asp-for="ReparationDescription" class="form-control" placeholder="Description de la réparation" />
        <input asp-for="ReparationCout" type="number" step="0.01" class="form-control" placeholder="Coût de la réparation" />
    </div>

    <div class="form-group">
        <label asp-for="ImageFiles">Ajouter des images</label>
        <input type="file" asp-for="ImageFiles" multiple accept="image/jpeg,image/png" class="form-control" />
        <span asp-validation-for="ImageFiles" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Ajouter</button>
</form>
