@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center">
    <h1>Nos voitures</h1>
    @if (User.Identity.IsAuthenticated)
    {
        <a href="/Vehicule/Create" class="btn btn-primary">Ajouter une voiture</a>
    }
</div>

@if (Model != null && Model.Any())
{
    <div class="container vehicle-list">
        <div class="row">
            @foreach (var vehicule in Model.Vehicules)
            {
                <div class="col-md-6">
                    <div class="card">
                        <div class="row">
                            <div class="col-md-6">
                                <img src="@vehicule.ListImage.FirstOrDefault()?.Url" class="card-img-top" alt="Photo du véhicule" />
                            </div>
                            <div class="card-body">
                                <div class="col-md-6">
                                    <h5 class="card-title"><strong>@vehicule.PrixVente €</strong></h5>
                                    <p class="card-text">                                
                                        @vehicule.Annee.Nom<br />
                                        @vehicule.Marque.Nom<br />
                                        @vehicule.Modele.Nom<br />
                                        @vehicule.Finition.Nom
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>Aucun véhicule n'est disponible.</p>
}
