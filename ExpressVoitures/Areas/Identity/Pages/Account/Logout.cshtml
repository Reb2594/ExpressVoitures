@page
@model LogoutModel
@{
    ViewData["Title"] = "Express Voitures";
}

<header>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <div class="d-flex justify-content-center align-items-center">
            <div class="container text-center col-lg-4 col-md-6 col-12 mt-5">
                <h2 style="margin-bottom: 3em;">@ViewData["Title"]</h2>
                <form class="mt-4" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" style="width: 100%;">
                    <button type="submit" class="btn btn-secondary w-50">Se déconnecter</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <p>You have successfully logged out of the application.</p>
    }
</header>
